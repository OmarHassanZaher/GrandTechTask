<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_rv"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_height="@dimen/_140sdp"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@drawable/gradient"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/image1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/live_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Now"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/day_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/result_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 - 2"
            app:layout_constraintEnd_toEndOf="@+id/day_tx"
            app:layout_constraintStart_toStartOf="@+id/day_tx"
            app:layout_constraintTop_toBottomOf="@+id/day_tx" />

        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/away_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/result_tx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/result_tx"
            app:layout_constraintTop_toTopOf="@+id/result_tx" />

        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/home_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/away_team_name"
            app:layout_constraintEnd_toStartOf="@+id/result_tx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/away_team_name" />

        <TextView
            android:textColor="@color/gray"
            android:id="@+id/live_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/result_tx"
            app:layout_constraintStart_toStartOf="@+id/result_tx"
            app:layout_constraintTop_toBottomOf="@+id/result_tx" />

        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/start_match_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/live_tx" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_match_tx" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/premier_league_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premier League"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_match_tx" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginEnd="@dimen/_6sdp"
            android:id="@+id/week_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week 1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_match_tx" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>